# Application
APP_NAME="Digital Signage AI Service"
ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8001

# Redis (Celery Broker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Laravel API (for callbacks)
LARAVEL_API_URL=http://localhost:8000
LARAVEL_INTERNAL_SECRET=your-secret-key-here

# AI Models Configuration
# Stable Diffusion Model
SD_MODEL_ID=runwayml/stable-diffusion-v1-5
# Alternative: stabilityai/stable-diffusion-xl-base-1.0
USE_XFORMERS=true
ENABLE_CPU_OFFLOAD=false

# Face Swap Model
FACE_SWAP_MODEL=inswapper_128.onnx

# Image Generation Settings
DEFAULT_IMAGE_WIDTH=512
DEFAULT_IMAGE_HEIGHT=768
NUM_INFERENCE_STEPS=30
GUIDANCE_SCALE=7.5

# Processing
MAX_BATCH_SIZE=4
GPU_MEMORY_FRACTION=0.8

# File Storage
TEMP_DIR=./temp
MODELS_DIR=./models
OUTPUT_DIR=./output

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_service.log